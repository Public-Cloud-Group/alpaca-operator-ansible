# ALPACA Operator Inventory Template
# Generated from CSV: {{ csv_processor.input_file }}

[alpaca_operator]
{{ alpaca_api.host }}

[alpaca_operator:vars]
# ALPACA API Configuration
ALPACA_Operator_API_Protocol={{ alpaca_api.protocol }}
ALPACA_Operator_API_Port={{ alpaca_api.port }}
ALPACA_Operator_API_Username={{ alpaca_api.username }}
ALPACA_Operator_API_Password={{ alpaca_api.password }}
ALPACA_Operator_API_Validate_Certs={{ alpaca_api.tls_verify | lower }}

# Processing Configuration
processing_mode={{ 'direct' if processing_options.create_commands else 'playbook' }}

# CSV Processing Information
csv_source_file={{ csv_processor.input_file }}
csv_delimiter={{ csv_processor.delimiter }}
csv_encoding={{ csv_processor.encoding }}

# Generated: {{ ansible_date_time.iso8601 | default(lookup('pipe', 'date -u +%Y-%m-%dT%H:%M:%SZ')) }}